<UserControl x:Class="Bilizzi.Login.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bilizzi.Login"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">


    <Grid>

        <StackPanel HorizontalAlignment="Center" Height="400" VerticalAlignment="Center" Width="800">
            <StackPanel Background="#483F23" Width="328" HorizontalAlignment="Left" Height="400">
                <TextBlock Text="Welcome" FontSize="40" HorizontalAlignment="Center" Height="49" Margin="10"/>

                <TextBlock Text="Login to your create account" FontSize="20" Margin="10,0,10,0" HorizontalAlignment="Center" />

                <TextBlock Text="User Name :" FontSize="18" Foreground="White" Margin="20,10,20,5" />
                <TextBox x:Name="UsernameTextBox" Height="28" Margin="20,0,20,20" TextChanged="TextBox_TextChanged_1" />

                <TextBlock Text="Password :" FontSize="18" Foreground="White" Margin="20,10,20,5" />
                <PasswordBox x:Name="PasswordBox" Height="28" Margin="20,0,20,20" />

                <Button Content="Log In" FontSize="20" Background="#F2E3BF" Margin="20,20,20,10" Click="LoginButton_Click" Width="120" FontWeight="Bold" />

                <Button Content="Already you have no account? Sign Up" FontSize="15" Background="#483F23" BorderBrush="#483F23" Foreground="White" Margin="20,10,20,20" Click="SignUpButton_Click" Width="259" />
            </StackPanel>
        </StackPanel>
        <Image Source="/Images/image4.jpg" Margin="321,0,-7,0" Height="400" Width="470"/>
    </Grid>
</UserControl>
