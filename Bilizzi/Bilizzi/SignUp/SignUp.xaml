<UserControl x:Class="Bilizzi.SignUp.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bilizzi.SignUp"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="400" VerticalAlignment="Center" Width="800">
            <StackPanel HorizontalAlignment="Left" Height="400" Margin="381,0,0,0" Width="418" Background="#868685">
                <TextBlock Height="44" TextWrapping="Wrap" Text="Welcome" Width="170" FontSize="40" HorizontalAlignment="Center"/>

                <TextBlock Height="30" TextWrapping="Wrap" Text="Create your account" Width="182" FontSize="20" HorizontalAlignment="Center"/>

                <TextBlock Height="25" TextWrapping="Wrap" Text="User Name :" Width="166" FontSize="18" HorizontalAlignment="Left" Margin="15"/>
                <TextBox x:Name="UsernameTextBox" Height="25" TextWrapping="Wrap" Width="320" Margin="-10"/>

                <TextBlock Height="23" TextWrapping="Wrap" Text="Email :" Width="171" FontSize="18" HorizontalAlignment="Left" Margin="15"/>
                <TextBox x:Name="EmailTextBox" Height="25" TextWrapping="Wrap" Width="320" Margin="-10"/>

                <TextBlock Height="24" TextWrapping="Wrap" Text="Password :" Width="146" FontSize="18" HorizontalAlignment="Left" Margin="15"/>
                <PasswordBox x:Name="PasswordBox"  Height="25" Width="320" Margin="-10"/>

                <TextBlock Height="24" TextWrapping="Wrap" Text="Confirm Password :" Width="160" FontSize="18" HorizontalAlignment="Left" Margin="15"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="25" Width="320" Margin="-10"/>

                <Button Content="Sign Up" Height="30" Width="121" FontSize="20" FontWeight="Bold" Background="Beige" Margin="20" Click="SignUpButton_Click"/>
                <Button Content="Already you have an account ? Log In" Height="30" Width="258" FontSize="15" Background="#868685" BorderBrush="#868685" Click="LogInButton_Click" Margin="-20"/>


            </StackPanel>
        </StackPanel>
        <Image Source="/Images/image5.jpg" Margin="0,0,418,0" Height="400"/>


    </Grid>
</UserControl>
