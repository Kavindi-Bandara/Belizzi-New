<UserControl x:Class="Bilizzi.FirstPage.FirstPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bilizzi.FirstPage"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="#AFA191" HorizontalAlignment="Center" Height="400" VerticalAlignment="Center" Width="800">

            <StackPanel Height="400" Width="332" Background="#322604">
                <TextBlock Height="58" TextWrapping="Wrap" Text="Belizzi Fashion" Width="283" FontSize="40" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Margin="30"/>
                <Button Content="Log In" Height="35" Width="200" FontSize="20" Margin="65" Click="LoginButton_Click"/>
                <Button Content="Sign Up" Height="35" Width="200" FontSize="20" Background="#AFA191" Click="SignUpButton_Click"/>
            </StackPanel>

            <Image Source="/Images/image2.jpg" Margin="-560,-400,0,0" Width="280" Height="401"/>
            <Image Source="/Images/image3.jpg" Margin="560,-400,0,0" Width="480" Height="426"/>

        </StackPanel>

    </Grid>
</UserControl>
