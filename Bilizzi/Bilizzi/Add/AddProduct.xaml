<Window x:Class="Bilizzi.Product.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ID:" />
            <TextBox x:Name="txtID" Height="25" />

            <TextBlock Text="Name:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtName" Height="25" />

            <TextBlock Text="Price:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPrice" Height="25" />

            <TextBlock Text="Quantity:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtQuantity" Height="25" />

            <Button Content="Add" Click="AddButton_Click" Height="30" Width="80" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
