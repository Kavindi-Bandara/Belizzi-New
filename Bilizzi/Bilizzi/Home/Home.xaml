<UserControl x:Class="Bilizzi.Home.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bilizzi.Home"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <!-- Header Section -->
        <StackPanel Height="400" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800">


            <!-- Navigation Buttons -->

            <StackPanel  HorizontalAlignment="Left" Width="269" Background="#322604" Height="400" Margin="0">
                <Button Content="Home" FontSize="25" Margin="20" Click="HomeButton_Click" Width="246" Height="48"/>
                <Button Content="Product" FontSize="25" Margin="20" Click="ProductButton_Click" Width="246" Height="48"/>
                <Button Content="SignUp" FontSize="25" Margin="20" Click="SignUpButton_Click" Width="246" Height="48"/>
                <Button Content="LogIn" FontSize="25" Margin="20" Click="LogInButton_Click" Width="246" Height="48"/>

            </StackPanel>
        </StackPanel>

        <Image Source="/Images/image1.jpg" Margin="272,-5,0,-3" Width="528"/>
        <TextBlock TextWrapping="Wrap" Text="Belizzi Fashoin" Margin="311,175,10,129" FontSize="70" FontWeight="Bold" Width="479" Height="80"/>

    </Grid>
</UserControl>
